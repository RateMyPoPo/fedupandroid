<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.dannyeng.fedup.Button"
    android:background="@drawable/backgroundtwo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/settingbutton"
        android:background="#b6807771"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

<!--
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonstart"
        android:background="@drawable/buttonbutton"
        android:layout_above="@+id/buttonstop"
        android:layout_centerHorizontal="true" />
-->

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="50dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit to Dropbox"
        android:id="@+id/button"
        android:background="#b6807771"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignTop="@+id/settingbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gif_button"
        android:layout_below="@+id/chronometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonstart"
        android:layout_alignRight="@+id/settingbutton"
        android:layout_alignEnd="@+id/settingbutton" />
-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonstart"
        android:layout_alignRight="@+id/settingbutton"
        android:layout_alignEnd="@+id/settingbutton"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chronometer"
        android:layout_above="@+id/settingbutton" />
</RelativeLayout>
